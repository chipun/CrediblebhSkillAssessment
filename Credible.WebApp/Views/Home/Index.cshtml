    <div class="row"></div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Company</th>
                    <th>Notes</th>
                    <th>Title</th>
                    <th>Keyword</th>
                    <th>Description</th>

                    <th>Email</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.Raw(item.portal_nm)</td>
                        <td>@Html.Raw(item.notes)</td>
                        <td>@Html.Raw(item.title)</td>
                        <td>@Html.Raw(item.keyword)</td>
                        <td>@Html.Raw(item.description)</td>
                        <td>@Html.Raw(item.contact_email)</td>
                        <td>
                            @Html.ActionLink("View Detail", "Details", "Clients", new { id = item.portal_id }, null)
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>


